<h1>New membership</h1>

<%= form_for(@membership) do |f| %>
  <% user_bc = current_user.beerclubs.map { |bc| bc.id } %>
  <% eligible_bc = @beerclubs.select {|bc| !user_bc.include? bc.id } %>
  <% options = options_from_collection_for_select(eligible_bc, :id, :name) %>
  <%= f.select :beer_club_id, options %>
  <%= f.select :user_id, options_for_select([[current_user.username, current_user.id]]) %>
  <%= f.submit %>
<% end %>

<br>

<div>
  <%= link_to "Back to memberships", memberships_path %>
</div>
